{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@fhevm-sdk": ["./packages/fhevm-sdk/src"],
      "@fhevm-sdk/*": ["./packages/fhevm-sdk/src/*"]
    }
  },
  "include": [
    "packages/**/*",
    "scripts/**/*"
  ]
}
